<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.exmaple.lensview.MainActivity">

    <com.exmaple.lensview.LensView
        android:id="@+id/lensView"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@android:color/holo_green_light"
        app:animationTime="100"
        app:distortionFactor="10"
        app:highlightColor="@android:color/holo_orange_light"
        app:iconSize="20dp"
        app:scaleFactor="2"
        app:showTouchSelection="true"
        app:touchSelectionRadius="20dp"/>

</android.support.constraint.ConstraintLayout>
